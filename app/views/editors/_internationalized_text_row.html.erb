<div class="form-inline internationalized-text-row">
    <div class="form-group">
        <label for="entity[<%= prop.property_identifier %>][strings][][language]">Language</label>
        <input name="entity[<%= prop.property_identifier %>][strings][][language]" type="text" class="form-control language" value="<%= language %>">
    </div>
    <div class="form-group">
        <label for="entity[<%= prop.property_identifier %>][strings][][text]">Text</label>
        <textarea rows="1" name="entity[<%= prop.property_identifier %>][strings][][text]" class="form-control"><%= text %></textarea>
    </div>
    <div class="form-group">
        <span class="pull-right btn btn-default btn-sm glyphicon glyphicon-remove internationalized-text-row-delete"></span>
    </div>
</div>