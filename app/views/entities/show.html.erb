<% content_for :title do %>
    <%= entity_title_string @entity %>
<% end %>

<% unless @entity.entity_actions.blank? %>
<div class="entity-actions-sidebox">
    <% @entity.entity_actions.each do |action| %>
        <a class="btn btn-default<% if action[:button_class] %> <%= action[:button_class] %><% end %>" href="<%= entity_action_link @entity, action[:action] %>"><%= action[:title] %></a>
    <% end %>
</div>
<% end %>

<h4><%= entity_title_string @entity %></h4>

<%= render_entity_properties @entity %>

<%= form_tag({}, :id => 'entity-delete-form', :method => 'delete') do %>
<% end %>
